# ========================================
# CONFIGURACIÓN DE ENTORNO - NEXT-WORKIFY
# ========================================

# ========================================
# BASE DE DATOS
# ========================================
# URL de conexión a la base de datos PostgreSQL (Docker)
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/workify_db"

# ========================================
# JWT - AUTENTICACIÓN
# ========================================
# Clave secreta para JWT (DEBE ser segura en producción - mínimo 32 caracteres)
JWT_SECRET="dev-secret-key-change-this-in-production-minimum-32-chars"

# Tiempo de expiración del token JWT en segundos (por defecto 7 días)
# JWT_EXPIRES_IN=604800

# ========================================
# SERVIDOR
# ========================================
# Puerto del servidor (por defecto 3000)
# PORT=3000

# URL base de la aplicación (para emails y redirecciones)
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Entorno de ejecución
NODE_ENV="development"

# ========================================
# RATE LIMITING
# ========================================
# Ventana de tiempo general en milisegundos (15 minutos por defecto)
# RATE_LIMIT_WINDOW_MS=900000

# Máximo de requests por ventana (100 por defecto)
# RATE_LIMIT_MAX_REQUESTS=100

# Ventana de tiempo para login en milisegundos (5 minutos por defecto)
# RATE_LIMIT_LOGIN_WINDOW_MS=300000

# Máximo de intentos de login (5 por defecto)
# RATE_LIMIT_LOGIN_MAX_ATTEMPTS=5

# Ventana de tiempo para importaciones en milisegundos (1 hora por defecto)
# RATE_LIMIT_IMPORT_WINDOW_MS=3600000

# Máximo de importaciones por ventana (3 por defecto)
# RATE_LIMIT_IMPORT_MAX_ATTEMPTS=3

# ========================================
# SEGURIDAD
# ========================================
# Tamaño máximo de request en bytes (1MB por defecto)
# MAX_REQUEST_SIZE=1048576

# Tamaño máximo de respuesta
# MAX_RESPONSE_SIZE=1000

# Tiempo de sesión en milisegundos (7 días por defecto)
# SESSION_TIMEOUT=604800000

# ========================================
# LOGGING
# ========================================
# Nivel de logging (info, warn, error, debug)
# LOG_LEVEL=info

# Habilitar logs detallados (true en desarrollo, false en producción)
# ENABLE_DETAILED_LOGS=true

# ========================================
# BACKUP
# ========================================
# Frecuencia de backup automático en horas (24 horas por defecto)
# BACKUP_INTERVAL_HOURS=24

# Ruta para almacenar backups
# BACKUP_PATH=./backups

# Habilitar backup automático
# BACKUP_ENABLED=false